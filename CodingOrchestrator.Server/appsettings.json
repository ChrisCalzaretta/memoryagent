{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MemoryAgent": {
    "BaseUrl": "http://localhost:5000"
  },
  "CodingAgent": {
    "BaseUrl": "http://localhost:5001"
  },
  "ValidationAgent": {
    "BaseUrl": "http://localhost:5002"
  },
  "DockerExecution": {
    "MemoryLimit": "512m",
    "CpuLimit": "1.0",
    "PidsLimit": 100,
    "TimeoutSeconds": 60,
    "NetworkEnabled": false,
    "EnableWarmup": true,
    "WarmupImages": [
      "python:3.12-slim",
      "mcr.microsoft.com/dotnet/sdk:8.0",
      "node:20-slim",
      "golang:1.22-alpine",
      "dart:stable"
    ]
  },
  "Resilience": {
    "RetryCount": 3,
    "RetryDelaySeconds": 2,
    "CircuitBreakerThreshold": 5,
    "CircuitBreakerDurationSeconds": 30
  },
  "OpenTelemetry": {
    "Endpoint": "",
    "ServiceName": "CodingOrchestrator",
    "ServiceVersion": "1.0.0"
  }
}



