{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MemoryAgent": {
    "BaseUrl": "http://localhost:5000"
  },
  "CodingAgent": {
    "BaseUrl": "http://localhost:5001"
  },
  "ValidationAgent": {
    "BaseUrl": "http://localhost:5002"
  },
  "DesignAgent": {
    "BaseUrl": "http://localhost:5004"
  },
  "DockerExecution": {
    "MemoryLimit": "1g",
    "CpuLimit": "2.0",
    "PidsLimit": 100,
    "TimeoutSeconds": 120,
    "NetworkEnabled": false,
    "EnableWarmup": true,
    "WarmupImages": [
      "python:3.12-slim",
      "memoryagent-dotnet-multi:latest",
      "node:20-slim",
      "golang:1.22-alpine",
      "dart:stable"
    ]
  },
  "Resilience": {
    "RetryCount": 3,
    "RetryDelaySeconds": 2,
    "CircuitBreakerThreshold": 5,
    "CircuitBreakerDurationSeconds": 30
  },
  "OpenTelemetry": {
    "Endpoint": "",
    "ServiceName": "CodingOrchestrator",
    "ServiceVersion": "1.0.0"
  }
}



